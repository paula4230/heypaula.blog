<h1>Tracks</h1>

<table>
  <thead>
    <tr>
      <th>Song title</th>
      <th>Artist</th>
      <th>Album</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @playlists.each do |playlist| %>
      <tr>
        <td><%= link_to playlist.song_title, playlist%></td>
        <td><%= playlist.artist %></td>
        <td><%= playlist.album %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add Track', new_playlist_path %>
